<%= render layout: '/heading',
           locals: {
             size: 'h2',
             title: t('integrations.new.title')
           } do %>
  <nav class="pull-right">
    <%= link_to 'Return to integrations',
                admin_integrations_path,
                :class => 'btn btn-link' %>
  </nav>
<% end %>
<div>
  <%= simple_form_for([:admin, integration],
                      html: { class: 'form-horizontal' },
                      method: :post,
                      wrapper: :horizontal_form) do |form| %>
    <%= render partial: 'form',
               locals: {
                 form: form,
                 integration_types: Integration.integration_type.values,
                 model: integration } %>
    <div class="actions">
      <%= form.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
